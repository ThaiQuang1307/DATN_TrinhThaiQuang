{
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
          "version": "18.2.0"
        }
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }

    },
    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "no-unused-vars": "warn",
        "linebreak-style": 0,
        "quotes": [
            "error", "single", { "avoidEscape": true }
        ],
        "indent": ["error", 4],
        "comma-dangle": ["warn", "never"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "max-len": ["error", { "code": 150 }],
        "operator-linebreak": ["error", "after", { "overrides": {
            "?": "ignore",
            ":": "ignore",
            "||": "ignore"
        }}]
    }
}
